{
	"name": "web3-repl-static-refresh",
	"version": "0.1.0",
	"scripts": {
		"dev": "svelte-kit dev --port 3003",
		"build": "npm run build:worker && svelte-kit build",
		"build:worker": "rollup -c",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview --port 3004",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/adapter-static": "^1.0.0-next.28",
		"@sveltejs/kit": "next",
		"@typescript-eslint/eslint-plugin": "^5.10.1",
		"@typescript-eslint/parser": "^5.10.1",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.5.0",
		"rollup-plugin-string": "^3.0.0",
		"rollup-plugin-web-worker-loader": "^1.6.1",
		"svelte": "^3.44.0",
		"svelte-check": "^2.2.6",
		"svelte-preprocess": "^4.10.1",
		"svelte2tsx": "^0.5.3",
		"sveltejs-adapter-ipfs": "^0.2.1",
		"testweave-sdk": "^0.2.2",
		"tslib": "^2.3.1",
		"typescript": "~4.5.4"
	},
	"type": "module",
	"dependencies": {
		"arweave": "^1.10.23",
		"codemirror": "^5.65.1",
		"immortal-db": "^1.1.0",
		"inline-source": "github:DougAnderson444/inline-source",
		"ipfs-browser-global": "github:DougAnderson444/ipfs-browser-global",
		"mdsvex": "^0.10.5",
		"yootils": "^0.3.1"
	}
}
